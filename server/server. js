// server/server.js
import express from "express";
import cors from "cors";
import dotenv from "dotenv";

// ðŸ”¹ Route Imports
import authRoutes from "./routes/auth.js";
import adminRoutes from "./routes/admin.js";
import analyticsRoutes from "./routes/analyticsRoutes.js";

// ðŸ”¹ Routes inside "route" folder
import reminderRoutes from "./route/reminderRoutes.js";
import clientRoutes from "./route/clientRoutes.js";

// ðŸ”¹ Middleware
import { verifyToken } from "./middleware/verifyToken.js";

dotenv.config();

const app = express();
app.use(cors());
app.use(express.json());

// âœ… Test Route
app.get("/", (req, res) => {
  res.send("ðŸš€ Client Pulse V2 Server is Running Successfully!");
});

// âœ… Main Routes
app.use("/api/auth", authRoutes);
app.use("/api/admin", verifyToken, adminRoutes);
app.use("/api/analytics", verifyToken, analyticsRoutes);
app.use("/api/reminders", verifyToken, reminderRoutes);
app.use("/api/clients", verifyToken, clientRoutes);

// âœ… Default 404 Handler
app.use((req, res) => {
  res.status(404).json({ message: "Route not found" });
});

// âœ… Start Server
const PORT = process.env.PORT || 5000;
app.listen(PORT, () =>
  console.log(`ðŸ”¥ Server running successfully on port ${PORT}`)
);
